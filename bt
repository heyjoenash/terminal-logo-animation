#!/bin/bash
# BrandTrackers - The shortest, sweetest terminal experience
# Usage: curl -s bt.run | bash

RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[0;33m'
BLUE='\033[0;34m'
MAGENTA='\033[0;35m'
CYAN='\033[0;36m'
WHITE='\033[0;37m'
BOLD='\033[1m'
RESET='\033[0m'

# Animation type from argument (default: static)
ANIMATION=${1:-static}

